@model IEnumerable<PharmacyStore.ViewModel.NotPurchaseItemViewModel>

@{
    ViewData["Title"] = "Product Details";
}

<h1>Not Purchased Product Details Report</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td> <a href="/Products/Delete/@item.ProductId" class="btn btn-sm btn-outline-danger">Delete</a></td>  
            </tr>
        }
    </tbody>
</table>
