@model IEnumerable<PharmacyStore.ViewModel.SalesInfo>

@{
    ViewData["Title"] = "Sales Info";
}

<h1>Sales Report</h1>
<div class="row">
    <div class="col-6">
        <form action="/Report/SalesInfoReport" method="get">
            <div class="form-group">
                <label name="CustomerID" class="control-label"></label>
                <select name="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>
            <div class="form-group">
                <label name="CategoryID" class="control-label"></label>
                <select name="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
            </div>
            <div class="form-group">
                <label name="Quantity"></label>
            </div>
            <button class="btn btn-primary my-3" type="submit">Search</button>
            <a class="btn btn-danger my-3" href="/Report/ListStockReport">Reset</a>
        </form>
    </div>
</div>
