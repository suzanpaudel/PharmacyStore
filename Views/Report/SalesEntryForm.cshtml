@model PharmacyStore.ViewModel.SalesInfo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Sales</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Report/BillingReport" method="get">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <label for="CustomerID" class="control-label">Customer</label>
                <select name="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>
            <div class="form-group">
                <label for="ProductID" class="control-label">Product</label>
                <select name="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
            </div>
            <div class="form-group">
                <label for="Quantity" class="control-label">Quantity</label>
                <input type="number" name="Quantity" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Selling Price" class="control-label">Selling Price</label>
                <input type="number" name="SellingPrice" value="" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">View Billing</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
