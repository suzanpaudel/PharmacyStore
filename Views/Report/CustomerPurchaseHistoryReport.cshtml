@model IEnumerable<PharmacyStore.ViewModel.CustomerPurchaseHistoryViewModel>

@{
    ViewData["Title"] = "Customer Purchase History Report";
}

<h1>Customer Purchase Report</h1>
<form action="/Report/CustomerPurchaseHistoryReport" method="get">
    <input type="text" name="name" value="" />
    <button type="submit">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellingPrice)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellingPrice)
            </td>
        </tr>
        }
    </tbody>
</table>
