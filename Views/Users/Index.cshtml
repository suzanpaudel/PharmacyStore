@model IEnumerable<PharmacyStore.ViewModel.UserModel>

@{
    ViewData["Title"] = "Users' Report";

}

<h1>Index</h1>
<div class="row">
    <div class="col-6">
        <a href="/Identity/Account/Register" class="btn btn-primary">Register Now</a>
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>*@
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>  
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>*@
        <td>
            <a asp-action="Edit" asp-route-id="@item.UserID">Edit</a> | 
            <a href="/Users/Delete/@item.UserID">content</a>
            @*<a asp-action="Delete" asp-route-id="@item.UserID">Delete</a>*@
            @*<form asp-action="Delete">
                <input type="hidden" asp-route-id="@item.UserID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
            </form>*@

        </td>
        </tr>
        }
    </tbody>
</table>
