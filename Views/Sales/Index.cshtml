@model IEnumerable<PharmacyStore.Models.Sales>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalesDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesBillNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesTotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SalesDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesBillNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesTotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerAddress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalesID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SalesID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SalesID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
